<?xml version="1.0" encoding="UTF-8"?>

<launch>
    <!-- PLAY ROSBAG -->
    <node pkg="rosbag" type="play" name="data_loader" args="/home/pylo/Desktop/groundwalk1.bag" required="true"/>

    <node pkg="tf"
          type="static_transform_publisher"
          name="link1_broadcaster"
          args="0 0 0 0 0 0 map base_link 50" />

    <remap from="/camera/image_raw" to="/camera/color/image_raw"/>
    <remap from="/imu" to="/camera/imu"/>

    <node name="Mono" pkg="orb_slam3" type="Mono" output="screen"
          args="$(dirname)/../../../non_ros/orb_slam3/Vocabulary/ORBvoc.txt $(dirname)/../../orb_slam3/launch/orb_slam3.yaml" />

</launch>
