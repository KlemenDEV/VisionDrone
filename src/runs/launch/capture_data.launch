<?xml version="1.0" encoding="UTF-8"?>

<launch>
    <!-- CAPTURE MAVLINK -->
    <include file="$(find gps_injection)/launch/mavros.launch">
        <arg name="pluginlists_yaml" value="$(find gps_injection)/launch/apm_pluginlists.yaml"/>
        <arg name="config_yaml" value="$(find gps_injection)/launch/apm_config.yaml"/>

        <arg name="fcu_url" value="/dev/ttyAMA1:57600"/>
        <arg name="gcs_url" value=""/>
        <arg name="tgt_system" value="1"/>
        <arg name="tgt_component" value="1"/>
        <arg name="log_output" value="screen"/>
        <arg name="fcu_protocol" value="v1.0"/>
        <arg name="respawn_mavros" value="true"/>
    </include>
    <node pkg="rosservice" type="rosservice" name="mavros_stream_rate" args="call /mavros/set_stream_rate 0 10 1" />

    <!-- CAPTURE GPS MODULE -->
    <node pkg="ublox_gps" type="ublox_gps" name="ublox"
          output="screen"
          clear_params="false"
          respawn="true"
          respawn_delay="30">
        <param name="device" type="string" value="/dev/ttyAMA4"/>
        <rosparam command="load" file="$(find gps_injection)/config/gps_config.yaml"/>
    </node>

    <!-- CAPTURE REALSENSE CAMERA -->
    <include file="$(find realsense2_camera)/launch/rs_d435i_custom.launch"/>

    <!-- CAPTURE RASPBERRY PI CAMERA -->
    <node type="raspicam_node" pkg="raspicam_node" name="raspicam_node" output="screen">
        <param name="private_topics" value="false"/>
        <param name="camera_frame_id" value="pi_camera"/>
        <param name="enable_raw" value="false"/>
        <param name="enable_imv" value="false"/>
        <param name="camera_id" value="0"/>
        <param name="camera_info_url" value="package://raspicam_node/camera_info/camerav1_1280x720.yaml"/>
        <param name="camera_name" value="$(arg camera_name)"/>
        <param name="width" value="1280"/>
        <param name="height" value="720"/>
        <param name="framerate" value="10"/>
    </node>

    <!-- GENERATE ROSBAG -->
    TODO
</launch>
